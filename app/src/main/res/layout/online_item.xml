<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:id="@+id/calosc7"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Twoj ruch"
        android:id="@+id/status"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Graj"
        android:id="@+id/graj"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button2"
        android:layout_margin="2px"/>



    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/lewyObraz"
                android:layout_column="0"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/whale0"/>


            <TextView
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="gracz 1"
                android:id="@+id/imieLeft"
                android:layout_column="1"
                android:textColor="#ff000033"
                android:singleLine="true"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_margin="4px"/>

            <TextView
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="gracz1232 2"
                android:singleLine="true"
                android:id="@+id/imieRight"
                android:layout_column="2"
                android:textColor="#ff000033"
                android:layout_margin="4px"/>

            <ImageView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/prawyObraz"
                android:layout_column="3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/whale0"/>

            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:textColor="#ff000033"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1145"
                android:id="@+id/punktyLeft"
                android:layout_column="0"
                android:textColor="#ff000033"
                android:gravity="right"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:layout_margin="4px"/>

            <TextView
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="16"
                android:singleLine="true"
                android:id="@+id/punktyRight"
                android:layout_column="1"
                android:textColor="#ff000033"
                android:layout_margin="4px"/>

            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:textColor="#ff000033"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/szczegoly"
            android:visibility="gone">

            <TextView
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text\nSmaxt\nSmall Text"
                android:id="@+id/textView8"
                android:layout_column="0"
                android:textColor="#ff000033"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_margin="4px"/>

            <TextView
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text\n Smalt\nSmall Text"
                android:id="@+id/textView9"
                android:layout_column="1"
                android:textColor="#ff000033"
                android:layout_margin="4px"/>

            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:textColor="#ff000033"/>
        </TableRow>
    </TableLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/rewanz___"
        android:id="@+id/rewanz"
        android:layout_below="@+id/graj"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button2"
        android:layout_margin="2px"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/usun_____"
        android:id="@+id/usun"
        android:layout_below="@+id/rewanz"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button2"
        android:layout_margin="2px"/>

</RelativeLayout>